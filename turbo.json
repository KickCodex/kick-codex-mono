{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"],
      "env": ["AUTH_API_URL","NEXTAUTH_SECRET","FACEBOOK_CLIENT_ID","FACEBOOK_CLIENT_SECRET"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
